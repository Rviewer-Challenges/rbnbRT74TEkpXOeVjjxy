<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TwitterMirroring" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:colorPrimary">@color/blue</item>
        <item name="android:colorSecondary">@color/woodsmoke</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:windowLightNavigationBar">true</item>
        <item name="windowSplashScreenBackground">@color/blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="postSplashScreenTheme">@style/Theme.TwitterMirroring</item>
    </style>
</resources>